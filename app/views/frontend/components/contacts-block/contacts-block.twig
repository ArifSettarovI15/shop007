{% import 'frontend/elements/svg/svg_macros.twig' as Svg %}
{% import 'frontend/elements/link/link_macro.twig' as Link %}
<div class="c-block">
    <div class="c-block__wrapper">
        <div class="c-block__text">Вдохновляйте, балуйте и "Sмакуйте" вместе с нами!</div>
        <div class="c-block__list">
            <div class="c-block__item">
                <div class="c-block__icon">{{ Svg.icon('pin-icon') }}</div>
                <div class="c-block__value">
                    <span class="c-block__static-text">{{global.fields.info.info_addres}}</span>
                </div>
            </div>
            <div class="c-block__item">
                <div class="c-block__icon">{{ Svg.icon('clock-icon') }}</div>
                <div class="c-block__value">
                    <span class="c-block__static-text">{{global.fields.info.info_work_time}}</span>
                </div>
            </div>
            <div class="c-block__item">
                <div class="c-block__icon">{{ Svg.icon('phone-icon-2') }}</div>
                <div class="c-block__value">
                    {{ Link.link('tel:'~global.fields.info.info_phone|replace({'(':'',')':'',' ':'','-':''}),
                                        global.fields.info.info_phone) }}
                </div>
            </div>
            <div class="c-block__item">
                <div class="c-block__icon">{{ Svg.icon('mail-icon') }}</div>
                <div class="c-block__value">{{ Link.link('mailto:'~global.fields.info.info_email, global.fields.info.info_email) }}</div>
            </div>
        </div>
    </div>
</div>