<div class="shop-card">
    <div class="shop-card__main">
        <div class="container container_md">
            <div class="shop-card__row product">
                <div class="shop-card__preview">
                    {% include 'frontend/components/card-prview/card-prview.twig' %}
                </div>
                <div class="shop-card__info">
                    {% include 'frontend/components/card-info/card-info.twig' %}
                </div>
            </div>
        </div>
        <div class="m-3">
            <div class="pattern-4"></div>
            <div class="container container_md">
                {% include 'frontend/components/shop-bullets/shop-bullets.twig' %}
            </div>
        </div>
        <div class="container container_md">
            <div class="m-3">
                {% include 'frontend/components/shop-info/shop-info.twig' %}
            </div>

            {% if variables.parts or parts%}
                <div class="mt-3">
                    {% include 'frontend/components/tags-block/tags-block.twig' %}
                </div>
            {% endif %}
        </div>
    </div>
</div>