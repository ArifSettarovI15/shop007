{% extends "manager/global.html.twig" %}
{% block content %}
    <div class="form">
        <div class="fields">
            <div class="line">
                <div class="label">
                    Стиль:
                </div>
                <div class="value">
                    <select name="notify_style" class="element">
                        <option value="0">Выберите</option>
                        <option value="gray" {% if info.notify_style=='gray' %}selected="selected"{% endif %}>Серый</option>
                        <option value="yellow" {% if info.notify_style=='yellow' %}selected="selected"{% endif %}>Желтый</option>
                        <option value="red" {% if info.notify_style=='red' %}selected="selected"{% endif %}>Красный</option>
                    </select>
                </div>
            </div>
            <div class="line">
                <div class="label">
                    Список:
                </div>
                <div class="value">
                    <select name="notify_list_id" class="element">
                        <option value="0">Выберите</option>
                        {% for i in n_list %}
                            <option value="{{ i.notify_list_id }}" {% if info.notify_list_id==i.notify_list_id %}selected="selected"{% endif %}>{{ i.notify_list_title }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="line">
                <div class="label">
                    Текст:
                </div>
                <div class="value">
                    <textarea class="element" name="notify_text">{{ info.notify_text }}</textarea>
                </div>
            </div>


            {% if edit==1 %}
                <input type="hidden" class="element" name="action" value="process_edit">
                <input type="hidden" class="element" name="notify_id" value="{{ info.notify_id }}">
            {% else %}
                <input type="hidden" class="element" name="action" value="process_add">
            {% endif %}
        </div>
        <div class="submit btn btn-primary">
            {% if edit==1 %}
                Сохранить
            {% else %}
                Добавить
            {% endif %}
        </div>
    </div>
{% endblock %}
