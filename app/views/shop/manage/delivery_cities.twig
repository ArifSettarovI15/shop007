{% extends "manager/global.html.twig" %}
{% block content %}

    <div class="actions">
        <a class="btn btn-primary" href="{{ global.base_url }}/manager/shop/delivery/cities/add/">Добавить</a>
    </div>

    <div class="table_data">

        <table class="table_bordered table_striped">
            <thead>
            <tr>
                <th style="width: 100px">ID</th>
                <th style="width: 100px">Акт</th>
                <th style="width: 100px">Фото</th>
                <th>Название</th>
                <th>Группа</th>
                <th class="action_button_3"></th>
            </tr>
            <tr>
                <th><input data-name="city_id" data-type="filter_value" min="0" type="text"></th>
                <th>
                    <select data-name="city_status" data-type="filter_value">
                        <option value="-1" {% if variables.city_status==-1 %}selected="selected"{% endif %}>Все</option>
                        <option value="0" {% if variables.city_status==0 %}selected="selected"{% endif %}>Выкл</option>
                        <option value="1" {% if variables.city_status==1 %}selected="selected"{% endif %}>Вкл</option>
                    </select>
                </th>
                <th></th>
                <th><input data-name="city_title" data-type="filter_value" type="text"></th>
                <th></th>
                <th class="action_button"></th>
            </tr>
            </thead>
            <tbody class="table_content sortable">
            {% include 'shop/manage/delivery_cities_table.twig' %}
            </tbody>
        </table>
    </div>
{% endblock %}
