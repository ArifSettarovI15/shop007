{% extends "manager/global.html.twig" %}
{% block content %}
  <style>
    * {
      box-sizing: border-box;
    }
    [contentEditable="true"]:hover{
      border: 1px;
      border-color: black;
      border-style: dashed;
    }
    [contentEditable="true"]:focus{
      border: 2px;
      border-style: solid;
      background: #fff;
    }
    .article_container{
      width: 90%;
      height: inherit;
      border-radius: 15px;
      margin: 0 auto;
      background: #f5f5f5;
    }
    .article_wrapper{
      width: 85%;
      height: 90%;
      margin: 0 auto;
    }
    section:hover .m-3{

      border: 1px;

      border-color: black;
      border-style: dashed;
    }
    .add_section_wrapper:hover .m-3{

      border: 1px;

      border-color: black;
      border-style: dashed;
    }

    section:hover + .add_section_wrapper{
      margin-top:-60px;
      opacity: 1;
      visibility: visible;
    }
    .add_section_wrapper:hover{
      margin-top:-58px;
      opacity: 1;
      visibility: visible;
    }
    .add_section_wrapper{
      opacity: 0;
      visibility: hidden;
      position: absolute;
      margin: 0 auto;
      margin-top:-50px;
      text-align: center;
      left:0;
      right: 0;
      padding: 0;
      border: 0;
      height: 30px;
      border-radius: 50px;
      z-index:1;
      transition: all .3s;
    }

    .add_section_wrapper:hover {
      opacity: 1;
      visibility: visible;
    }


    .add_section img{
      width: 30px;
    }

  </style>

  <div class="form">
    <div class="fields">

      <div class="line">
        <div class="label required">
          Название:
        </div>
        <div class="value">
          <input name="content_title" class="element required translit_from" type="text"  maxlength="250"  value="{{ info.content_title }}">
        </div>
      </div>

      <div class="line">
        <div class="label required">
          URL:
        </div>
        <div class="value">
          <input name="content_url" class="element required translit_to" type="text"  maxlength="250"  value="{{ info.last_url_part }}">
        </div>
      </div>

      <div class="line">
        <div class="label">
          Фото:
        </div>
        <div class="value">
          {% set image_data=image_data_image %}
          {% include 'files/upload_image.html.twig' %}
        </div>
      </div>
      <div class="line">
        <div class="label">
          Тумба:
        </div>
        <div class="value">
            {% set image_data=image_data_thumb %}
            {% include 'files/upload_image.html.twig' %}
        </div>
      </div>

      <div class="line">
        <div class="label">
          Кнопка поделиться на всю ширину:
        </div>
        <div class="value">
          <div>
            <input type="checkbox" class="element" id="left" name="share_position" value="1" {% if not info.share_position %} {% else%} checked{% endif %}>
          </div>
        </div>
      </div>

      <div class="line">
        <div class="label">
          Текст:
        </div>
        <div class="value">
{#          {% include 'content/manager/article_content.twig'%}#}
          <textarea class="rich element" name="text">{{ info.content_text }}</textarea>
        </div>
      </div>




      <div class="line">
        <div class="label">
          Meta title:
        </div>
        <div class="value">
          <input name="meta_title" class="element" type="text"  maxlength="250"  value="{{ info.head_title }}">
        </div>
      </div>

      <div class="line">
        <div class="label">
          Meta keywords:
        </div>
        <div class="value">
          <input name="meta_keywords" class="element" type="text"  maxlength="250"  value="{{ info.head_keywords }}">
        </div>
      </div>

      <div class="line">
        <div class="label">
          Meta desc:
        </div>
        <div class="value">
          <input name="meta_desc" class="element" type="text"  maxlength="250"  value="{{ info.head_desc }}">
        </div>
      </div>

      {% if edit==1 %}
        <input type="hidden" class="element" name="action" value="process_edit">
        <input type="hidden" class="element" name="content_id" value="{{ info.content_id }}">
      {% else %}
        <input type="hidden" class="element" name="action" value="process_add">
      {% endif %}
    </div>

    {% if content_type=='news' or content_type=='articles' %}
{#    <div class="line">#}
{#      <div class="label">#}
{#        Время публикации:#}
{#      </div>#}
{#      <div class="value">#}
{#        <input name="content_time" class="element datetimepicker" type="text" value="{% if info.content_time %}{{ info.content_time|date("d.m.Y H:i") }}{% endif %}">#}
{#      </div>#}
{#    </div>#}
    {% endif %}
      {% if content_type=='akcii' %}
        <div class="line">
          <div class="label">
            Время окончания:
          </div>
          <div class="value">
            <input name="content_time_end" class="element datetimepicker" type="text" value="{% if info.content_time_end %}{{ info.content_time_end|date("d.m.Y H:i") }}{% endif %}">
          </div>
        </div>
      {% endif %}
    <div class="line">
      <div class="label">
        Шаблон страницы:
      </div>
      <div class="value">
        <select class="element" name="template_name">
          <option value="">Стандартный</option>
            {% for template in templates %}
              <option {% if info.content_template==template %}selected="selected"{% endif %} value="{{ template }}">{{ template }}</option>
            {% endfor %}
        </select>
      </div>
    </div>
    <div class="line">
      <div class="label">
        Активирован:
      </div>
      <div class="value">
        <input name="content_status" class="element" type="checkbox" {% if info.content_status or edit!=1%}checked="checked"{% endif %}>
      </div>
    </div>
    <div class="submit btn btn-primary">
      {% if edit==1 %}
        Сохранить
      {% else %}
        Добавить
      {% endif %}
    </div>
  </div>
{% endblock %}
