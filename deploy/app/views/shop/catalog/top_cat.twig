{% extends "layout.twig" %}
{% block content %}
    <div class="page__main table-data">
        <div class="mb-3">
            {% include 'frontend/components/catalog-filters/catalog-filters.twig' %}
        </div>
        <input type="hidden" name="company_name" class="company_name_part" value="{{ global.fields.info.info_title }}">
        <div class="page__core">
            <div class="container container_lg">
                <div class="table-list table-list_second table-list_2">
                    <div class="table-list__list" data-list="bouquets">
                        {% if list %}
                            {% for product in list %}
                                {% include 'frontend/components/item-thumb/item-thumb.twig' %}
                            {% endfor %}
                        {% else %}
                            <h2 class="cat-no-text">Нет товаров соттветсвующих критерию</h2>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <div class="container container_sm">
                {% if paging_data.pages %}
                    <div class="page__paging table-paging" data-list="paging" data-table="bouquets">
                        {% include 'frontend/components/paging/paging.twig' %}
                    </div>
                {% endif %}
                <div class="catalog-tags">
                    {% include 'frontend/components/tags-block/tags-block.twig' %}
                </div>
            </div>
        </div>
        {% if variables.last_viewed%}
            <div class="last-viewed">
                <div class="m-1">
                    {% include 'frontend/components/screen-watch/screen-watch.twig' %}
                </div>
            </div>
        {% endif %}
        <div class="m-1">
            {% include 'frontend/components/screen-callback/screen-callback.twig' %}
        </div>
        <div class="m-1">
            {% include 'frontend/components/st-block/st-block.twig' %}
        </div>
    </div>
{% endblock %}
