{% extends "manager/global.html.twig" %}
{% block content %}
    <div class="form">
        <div class="fields">


            <div class="line">
                <div class="label required">
                    Название:
                </div>
                <div class="value">
                    <input name="vendor_name" class="element required translit_from" type="text"  maxlength="250"  value="{{ info.vendor_name }}">
                </div>
            </div>

            <div class="line">
                <div class="label required">
                    URL:
                </div>
                <div class="value">
                    <input name="vendor_url" class="element required translit_to" type="text"  maxlength="250"  value="{{ info.vendor_url }}">
                </div>
            </div>

            <div class="line">
                <div class="label">
                    Логотип:
                </div>
                <div class="value">
                    {% set image_data=image_data1 %}
                    {% include 'files/upload_image.html.twig' %}
                </div>
            </div>
            <div class="line">
                <div class="label">
                    Фото:
                </div>
                <div class="value">
                    {% set image_data=image_data2 %}
                    {% include 'files/upload_image.html.twig' %}
                </div>
            </div>

            <div class="line">
                <div class="label">
                    Описание:
                </div>
                <div class="value">
                    <textarea class="rich element" name="text">{{ info.vendor_full_text }}</textarea>
                </div>
            </div>

            <div class="line">
                <div class="label">
                    Альясы:
                </div>
                <div class="value">
                    <input name="vendor_alias" class="element" type="text"  maxlength="250"  value="{{ info.vendor_alias }}">
                </div>
            </div>

            <div class="line">
                <div class="label">
                    Meta title:
                </div>
                <div class="value">
                    <input name="meta_title" class="element" type="text"  maxlength="250"  value="{{ info.vendor_meta_title }}">
                </div>
            </div>

            <div class="line">
                <div class="label">
                    Meta keywords:
                </div>
                <div class="value">
                    <input name="meta_keywords" class="element" type="text"  maxlength="250"  value="{{ info.vendor_meta_keywords }}">
                </div>
            </div>

            <div class="line">
                <div class="label">
                    Meta desc:
                </div>
                <div class="value">
                    <input name="meta_desc" class="element" type="text"  maxlength="250"  value="{{ info.vendor_meta_desc }}">
                </div>
            </div>



            {% if edit==1 %}
                <input type="hidden" class="element" name="action" value="process_edit">
                <input type="hidden" class="element" name="vendor_id" value="{{ info.vendor_id }}">
            {% else %}
                <input type="hidden" class="element" name="action" value="process_add">
            {% endif %}
            <div class="submit btn btn-primary">
                {% if edit==1 %}
                    Сохранить
                {% else %}
                    Добавить
                {% endif %}
            </div>
    </div>
    </div>
{% endblock %}
