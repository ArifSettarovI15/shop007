{% extends "manager/global.html.twig" %}
{% block content %}
    <div class="actions">
        <a class="btn btn-primary" href="{{ global.base_url }}/manager/shop/promo/add/">Добавить</a>
    </div>

    <div class="table_data">
        <div class="table_data_navigation">
            {% include 'parts/paging.html.twig' %}
        </div>

        <table class="table_bordered table_striped">
            <thead>
            <tr>
                <th style="width: 100px">ID</th>
                <th style="width: 100px">Статус</th>
                <th>Название</th>
                <th style="width: 100px">Процент</th>
                <th style="width: 100px">Сумма</th>
                <th style="width: 200px">Использовано</th>
                <th class="action_button"></th>
            </tr>
            <tr>
                <th></th>
                <th>
                    <select data-name="vendor_status" data-type="filter_value">
                        <option value="-1" {% if variables.promo_status==-1 %}selected="selected"{% endif %}>Все</option>
                        <option value="0" {% if variables.promo_status==0 %}selected="selected"{% endif %}>Выкл</option>
                        <option value="1" {% if variables.promo_status==1 %}selected="selected"{% endif %}>Вкл</option>
                    </select>
                </th>
                <th><input data-name="vendor_name" data-type="filter_value" type="text"></th>
                <th></th>
                <th></th>
                <th></th>
                <th class="action_button"></th>
            </tr>
            </thead>
            <tbody class="table_content">
            {% include 'shop/manage/promo_table.twig' %}
            </tbody>
        </table>
    </div>
{% endblock %}
